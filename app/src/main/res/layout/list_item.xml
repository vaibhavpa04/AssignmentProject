<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/image_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/img"/>

    <TextView
        android:id="@+id/text_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Name"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@+id/image_profile"
        app:layout_constraintStart_toEndOf="@+id/image_profile"
        android:layout_marginLeft="25dp"
        />

    <TextView
        android:id="@+id/text_user_designation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Name"
        android:textSize="18sp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/text_user_name"
        app:layout_constraintStart_toEndOf="@+id/image_profile"
        android:layout_marginLeft="25dp"
        />

    <TextView
        android:id="@+id/text_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="@+id/text_user_name"
        tools:text="1 min"
    />

    <ImageView
        android:id="@+id/image_article"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@+id/image_profile"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/text_article_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="12sp"
        android:inputType="textMultiLine"
        app:layout_constraintTop_toBottomOf="@+id/image_article"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="If we navigate the hard drive, we can get to the SSL feed through the neural GB panel!"
        />

    <TextView
        android:id="@+id/text_article_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:inputType="textMultiLine"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/text_article_content"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Music orchestration"
        />

    <TextView
        android:id="@+id/text_article_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textStyle="italic"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@+id/text_article_title"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="https://isabell.net"
        />

    <TextView
        android:id="@+id/text_article_likes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/text_article_url"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="4.5K Likes"
        />

    <TextView
        android:id="@+id/text_article_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/text_article_likes"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="30K Comments"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/text_article_likes"
        android:background="@android:color/darker_gray"/>

</androidx.constraintlayout.widget.ConstraintLayout>